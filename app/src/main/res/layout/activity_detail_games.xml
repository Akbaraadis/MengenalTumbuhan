<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.games.DetailGamesActivity"
    android:background="@drawable/bg_main2">

    <ImageView
        android:id="@+id/detail_games_1"
        android:visibility="gone"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/games_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/detail_games_text"/>

    <ImageView
        android:id="@+id/detail_games_2"
        android:visibility="gone"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/games_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/detail_games_text"/>

    <ImageView
        android:id="@+id/detail_games_3"
        android:visibility="gone"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/games_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/detail_games_text"/>

    <ImageView
        android:id="@+id/detail_games_4"
        android:visibility="gone"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/games_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/detail_games_text"/>

    <ImageView
        android:id="@+id/detail_games_5"
        android:visibility="gone"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:src="@drawable/games_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/detail_games_text"/>

    <ImageView
        android:id="@+id/detail_games_6"
        android:visibility="gone"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:src="@drawable/games_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/detail_games_text"/>

    <ImageView
        android:id="@+id/detail_games_7"
        android:visibility="gone"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/games_7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/detail_games_text"/>

    <ImageView
        android:id="@+id/detail_games_8"
        android:visibility="gone"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:src="@drawable/games_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/detail_games_text"/>

    <ImageView
        android:id="@+id/detail_games_9"
        android:visibility="gone"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:src="@drawable/games_9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/detail_games_text"/>

    <ImageView
        android:id="@+id/detail_games_10"
        android:visibility="gone"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:src="@drawable/games_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/detail_games_text"/>

    <TextView
        android:id="@+id/detail_games_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jawab pada kolom dibawah"
        style="@style/textcontenticon"
        app:layout_constraintStart_toStartOf="@id/detail_games_answer"
        app:layout_constraintBottom_toTopOf="@id/detail_games_answer"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/detail_games_answer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textCapCharacters"
        android:background="@drawable/default_option_border_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>

    <Button
        android:id="@+id/detail_games_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/blue_card"
        android:text="PERIKSA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>