<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.latihan.LatihanActivity"
    android:background="@drawable/bg_main4">

    <ImageView
        android:id="@+id/iv_latihan_actionbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/dark_blue"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/latihan_iv_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_latihan_actionbar"
        app:layout_constraintBottom_toBottomOf="@id/iv_latihan_actionbar"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/latihan_tv_header"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Latihan"
        style="@style/textactionbar"
        android:layout_marginStart="10sp"
        app:layout_constraintStart_toEndOf="@id/latihan_iv_back"
        app:layout_constraintTop_toTopOf="@id/iv_latihan_actionbar"
        app:layout_constraintBottom_toBottomOf="@id/iv_latihan_actionbar"/>

    <ScrollView
        android:id="@+id/latihan_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/latihan_tv_judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Akar"
                android:layout_marginTop="20dp"
                style="@style/textcontentheadblack"/>

            <TextView
                android:id="@+id/latihan_tv_soal1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Akar merupakan bagian ..."
                android:layout_marginTop="10dp"
                style="@style/textcontentblack"
                android:justificationMode="inter_word"/>

            <EditText
                android:id="@+id/latihan_et_soal1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shape_background_blue"
                style="@style/textcontentblack"
                tools:text="Jawabannya adalah"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/latihan_tv_soal2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Akar merupakan bagian ..."
                android:layout_marginTop="40dp"
                style="@style/textcontentblack"
                android:justificationMode="inter_word"/>

            <EditText
                android:id="@+id/latihan_et_soal2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shape_background_blue"
                style="@style/textcontentblack"
                tools:text="Jawabannya adalah"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/latihan_tv_soal3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Akar merupakan bagian ..."
                android:layout_marginTop="40dp"
                style="@style/textcontentblack"
                android:justificationMode="inter_word"/>

            <EditText
                android:id="@+id/latihan_et_soal3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shape_background_blue"
                style="@style/textcontentblack"
                tools:text="Jawabannya adalah"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/latihan_tv_soal4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Akar merupakan bagian ..."
                android:layout_marginTop="40dp"
                style="@style/textcontentblack"
                android:justificationMode="inter_word"/>

            <EditText
                android:id="@+id/latihan_et_soal4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shape_background_blue"
                style="@style/textcontentblack"
                tools:text="Jawabannya adalah"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/latihan_tv_soal5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Akar merupakan bagian ..."
                android:layout_marginTop="40dp"
                style="@style/textcontentblack"
                android:justificationMode="inter_word"/>

            <EditText
                android:id="@+id/latihan_et_soal5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shape_background_blue"
                style="@style/textcontentblack"
                tools:text="Jawabannya adalah"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:visibility="gone"
        android:id="@+id/latihan_text_nilai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nilai Kamu"
        android:textSize="30sp"
        style="@style/textheader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/latihan_text_nilai2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="60sp"
        style="@style/textheader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/latihan_text_nilai"/>

    <Button
        android:id="@+id/latihan_btn_check"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Check Jawaban"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="12sp"
        android:backgroundTint="@color/dark_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>